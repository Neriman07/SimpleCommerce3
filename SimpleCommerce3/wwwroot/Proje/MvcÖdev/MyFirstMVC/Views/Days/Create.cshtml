@model Day
@{
    ViewData["Title"] = "Yeni Gün";
}

<h2>Yeni Gün</h2>
<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label col-lg-1 col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-for="Name" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="DogumGunu" class="control-label col-lg-1 col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DogumGunu" class="form-control" />
                <span asp-for="DogumGunu" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-danger">İptal</a>
            </div>


        </div>
    </div>
</form>



