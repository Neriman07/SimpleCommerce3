@model Friend
<h2>yeni arkadas</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label  col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" placeholder="Adınız" />
                <span asp-for="Name" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="BirthDate" class="control-label  col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="BirthDate" class="form-control" placeholder="Dogum Tarihi" />
                <span asp-for="BirthDate" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-danger">İptal</a>
            </div>


        </div>
    </div>
</form>


