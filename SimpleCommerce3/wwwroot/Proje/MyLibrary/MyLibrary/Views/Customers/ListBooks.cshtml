@model IEnumerable<Book>
@{
    Layout = null;
}

<!-- ikinci sekme -->
<button type="button" class="btn btn-xs btn-primary"
        data-toggle="modal" data-target="#addBookModal" onclick="LoadBookModal()">Kitap Ekle</button>

<table class="table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Kitap Adı</th>
        <th>Eylemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a asp-action="RemoveBook" asp-route-id="@item.Id" class="btn btn-xs btn-danger">Kitap Kaldır</a></td>
        </tr>
    }
</table>
