$white: #fff;
$light-grey: #eee;

// Breadcrumbs

.breadcrumb {
    background-color: transparent;
    font-size: 12px;
    line-height: 1.3em;
    margin-bottom: 0;
    margin-top: 16px;
    text-align: right;
    ul {
    	display: inline;
    	margin: 0;
    	padding: 0;
    }
    li {
    	display: inline;
    }
    a {
    	color: #888;
    }
    li + li:before {
    	content: "\f105";
    	padding: 0 5px;
    	font-family: FontAwesome;
    }
    // Fancy Style
    &.fancy {
    	overflow: hidden;
        font-size: 12px;
        line-height: 1.3em;
        background-color: transparent;
        padding: 0;
        margin-bottom: 20px;
        margin-top: 14px;
        li {
        	line-height: 32px;
        	margin: 0 2px 0 10px;
            
        	&:first-child i {
        		margin-right: -6px;
        	}
        	&:first-child {
        		margin: 0 2px 0 0;
        	}
        	&:first-child a::before {
        		border-width: 0;
        	}
        }
        a {
        	background: $light-grey;
            padding: .7em 1em;
            text-decoration: none;
            position: relative;
            &::before {
            	content: "";
                position: absolute;
                top: 50%;
                margin-top: -1.5em;
                border-width: 1.5em 0 1.5em 1.1em;
                border-style: solid;
                border-color: $light-grey $light-grey $light-grey transparent;
                left: -1em;
            }
            &::after {
            	content: "";
                position: absolute;
                top: 50%;
                margin-top: -1.5em;
                border-top: 1.5em solid transparent;
                border-bottom: 1.5em solid transparent;
                border-left: 1em solid $light-grey;
                right: -1em;
            }
        }
         a:hover,
        .active a {
        	background-color: #ddd;
        	color: $light-grey;
        }
        a:hover::before,
        .active a:before {
        	border-color: #ddd #ddd #ddd transparent;
        } 
   
        
    }
    // Radius
    &.radius {
    	background: transparent;
        overflow: hidden;
        font-size: 12px;
        & li {
        	margin-right: 16px;
        }
        a:hover,
        .active a {
        	background: #ddd;
        	color: $light-grey;
        }
        a:hover {
        	background: #ddd;
        }
        a::before,
        a::after {
        	background: none repeat scroll 0 0 $light-grey;
            bottom: 0;
            content: "";
            height: 25px;
            position: absolute;
            top: 0;
            -webkit-transform: skew(-8deg);
            -ms-transform: skew(-8deg);
            transform: skew(-8deg);
            width: 10px;
        }
        a::before {
        	left: -.5em;
        	border-radius: 5px 0 0 5px;
        }
        a:hover::before {
        	background: #ddd;
        }
        a::after {
        	right: -.5em;
        	border-radius: 0 5px 5px 0;
        }
        a:hover:after,
        .active a:after {
        	border-left-color: #ddd;
            background: #ddd;
        }
        
        
        
      
    }
}
body {
	&.device-sm,
	&.device-xs,
	&.device-xxs {
		.breadcrumb {
			text-align: left !important;
			clear: both;
		}
		.page-title-right .breadcrumb {
			text-align: right !important;
			clear: both;
			padding-top: 14px !important;
		}
		.page-title-center .breadcrumb {
			text-align: center !important;
			clear: both;
		}
	}
}
.breadcrumb.fancy li + li:before,
.breadcrumb.radius li + li:before {
    content: none;
}