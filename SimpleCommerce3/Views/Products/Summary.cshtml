@model Product
@{
    Layout = null;
}
<section id="product-page" class="product-page p-b-0">
    <div class="container">
        <div class="row">
            <!-- Post content -->
            <div class="post-content product col-md-9">
                <div class="row">
                    <div class="col-md-5">
                        <div class="product-image">
                            <div class="carousel" data-carousel-col="1" data-lightbox-type="gallery">
                                <a href="~/Uploads/@Model.Photo" title="@Model.Name">
                                    <img alt="@Model.Name" src="~/Uploads/@Model.Photo">
                                </a>

                                <a href="~/Uploads/@Model.Photo" title="@Model.Name">
                                    <img alt="@Model.Name" src="~/Uploads/@Model.Photo">
                                </a>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-7">
                        <div class="product-description">
                            <div class="product-category">@Model.Category.Name</div>
                            <div class="product-title">
                                <h3><a href="#">@Model.Name</a></h3>
                            </div>
                            <div class="product-price">
                                <ins>₺@Model.Price</ins>
                            </div>

                            <div class="seperator m-b-10"></div>
                            <p>@Model.Description</p>

                            <div class="seperator m-t-20 m-b-10"></div>

                        </div>

                        <div class="m-t-10">
                            <h6>Adres Seçin</h6>
                            <div class="cart-product-quantity">
                                <div class="quantity m-l-5">
                                    <input type="button" class="minus" value="-">
                                    <input type="text" class="qty" value="1">
                                    <input type="button" class="plus" value="+">
                                </div>
                            </div>
                        </div>
                        <div class="m-t-20">
                            <button type="button" class="btn btn-primary btn-lg" onclick="AddToCart(@Model.Id)"><i class="fa fa-shopping-cart"></i> Sepete Ekle</button>
                        </div>

                    </div>


                </div>
             
            </div>
            <!-- Post content -->
           
        </div>
    </div>
</section>