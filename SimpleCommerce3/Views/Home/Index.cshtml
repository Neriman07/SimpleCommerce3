<!-- END: SHOP CATEGORIES -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hr-title hr-long center"><abbr>Kategoriler </abbr> </div>

            </div>
        </div>

        <div class="shop-category">
            <div class="row">
                @foreach (var category in ViewBag.BrowserOurCategories)
                {

                    <div class="col-md-3">
                        <div class="shop-category-box">
                            <a href="@Url.Action("Index","Products",new { categoryId=category.Id})">
                                <img alt="" src="~/uploads/@category.Photo" style="width:100px; height:100px;">
                                <div class="product-description">                                
                                    <div class="shop-category-box-title text-center">
                                     <h6>@category.Name</h6><small>@category.PublishedProducts.Count  Ürün</small>
                                    </div>

                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- END: SHOP CATEGORIES -->