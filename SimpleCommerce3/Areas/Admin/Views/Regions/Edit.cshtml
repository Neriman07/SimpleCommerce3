@model SimpleCommerce3.Models.Region

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Region</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
